<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="ID-1" class="de.sample.app.contacts.model.Contact">
        <constructor-arg name="firstname" value="Max"/>
        <constructor-arg name="lastname" value="Muster"/>
        <constructor-arg name="id" value="ID-1"/>
        <constructor-arg>
            <bean class="de.sample.app.contacts.model.EMailAdresse">
                <property name="address" value="max@muster.de"/>
            </bean>
        </constructor-arg>

    </bean>
</beans>